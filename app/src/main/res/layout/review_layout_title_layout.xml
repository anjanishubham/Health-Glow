<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvAskOurExpert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/margin_16dp"
        android:text="@string/user_review_and_rating"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="18dp"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="@dimen/margin_16dp"
        android:id="@+id/tvPostQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/text_border_line"
        android:text="Rate and Write Review"
        android:gravity="center"
        android:paddingVertical="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAskOurExpert"
        style="@style/TextAppearance.AppCompat.Title"
        android:textSize="16dp"

        />


</androidx.constraintlayout.widget.ConstraintLayout>